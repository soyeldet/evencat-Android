<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <size android:width="100dp" android:height="35dp"/> <!-- Más ancho para el efecto de selección -->
            <solid android:color="#FFFFFF"/><!-- Borde morado suave -->
            <corners android:radius="16dp"/> <!-- Bordes redondeados -->
            <stroke android:width="2dp" android:color="#F5F5F5" />
        </shape>
    </item>

    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <size android:width="100dp" android:height="35dp"/>
            <solid android:color="#FFFFFF"/>
            <corners android:radius="16dp"/>
            <stroke android:width="2dp" android:color="#F5F5F5" />
        </shape>
    </item>
</selector>
