<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".activities.RegisterActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        >

        <ImageButton
            android:id="@+id/back_image_button"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/arrow"
            app:tint="@color/black"
            tools:ignore="MissingConstraints"
            android:rotationY="180"
            android:layout_gravity="center|left"
            android:layout_marginLeft="42dp"
            android:background="@android:color/transparent"
            />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sing_up_title"
            android:fontFamily="@font/poppins_medium"
            android:textSize="24sp"
            android:layout_marginLeft="42dp"
            android:textColor="@color/black"
            />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/rounded_edittext_login"
        >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/profile"
            android:layout_gravity="center|left"
            android:layout_marginLeft="20dp"
            />

        <EditText
            android:id="@+id/nameText"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="@string/name"
            android:fontFamily="@font/poppins_medium"
            android:textSize="16sp"
            android:background="@android:color/transparent"
            android:layout_marginLeft="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:textColor="@color/light_gray_login_text"
            />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/rounded_edittext_login"
        >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/mail"
            android:layout_gravity="center|left"
            android:layout_marginLeft="20dp"
            />

        <EditText
            android:id="@+id/emailText"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="abc@email.com"
            android:fontFamily="@font/poppins_medium"
            android:textSize="16sp"
            android:background="@android:color/transparent"
            android:layout_marginLeft="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:textColor="@color/light_gray_login_text"
            />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/rounded_edittext_login"
        >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/password"
            android:layout_gravity="center|left"
            android:layout_marginLeft="20dp"
            />

        <EditText
            android:id="@+id/password1Text"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="@string/password"
            android:fontFamily="@font/poppins_medium"
            android:textSize="16sp"
            android:background="@android:color/transparent"
            android:layout_marginLeft="56.7dp"
            android:layout_marginRight="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:textColor="@color/light_gray_login_text"
            android:password="true"
            />

        <ImageButton
            android:id="@+id/showPassword"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/password_visible"
            android:layout_gravity="center|right"
            android:layout_marginRight="20dp"
            android:background="@android:color/transparent"
            />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/rounded_edittext_login"
        >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/password"
            android:layout_gravity="center|left"
            android:layout_marginLeft="20dp"
            />

        <EditText
            android:id="@+id/password2Text"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="@string/password2"
            android:fontFamily="@font/poppins_medium"
            android:textSize="16sp"
            android:background="@android:color/transparent"
            android:layout_marginLeft="56.7dp"
            android:layout_marginRight="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:textColor="@color/light_gray_login_text"
            android:password="true"
            />

        <ImageButton
            android:id="@+id/showPassword2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/password_visible"
            android:layout_gravity="center|right"
            android:layout_marginRight="20dp"
            android:background="@android:color/transparent"
            />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/rounded_button_login"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/sing_up"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_medium"
            android:textSize="18sp"
            />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/arrow"
            android:layout_gravity="center|right"
            android:layout_marginRight="80dp"
            android:layout_marginBottom="2dp"
            />

        <Button
            android:id="@+id/sing_in_button"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@android:color/transparent">
        </Button>

    </FrameLayout>

</LinearLayout>